---
import Layout from "../../layouts/Layout.astro";
import ContactCard from "../../components/ContactCard.astro";
import { t } from "../../i18n/translations";

const locale = "es";
const base = import.meta.env.BASE_URL;

// Contact data
const whatsappContacts = [
    {
        title: t(locale, "contact.whatsapp.main"),
        subtitle: "Contacto general y servicios",
        value: "+52 331 062 9895",
        message: t(locale, "contact.message.whatsapp.general"),
    },
    {
        title: t(locale, "contact.whatsapp.supervision"),
        subtitle: "Supervisión técnica de proyectos",
        value: "+52 999 257 0067",
        message: t(locale, "contact.message.whatsapp.supervision"),
    },
    {
        title: t(locale, "contact.whatsapp.management"),
        subtitle: "Gestión y coordinación",
        value: "+52 557 857 9113",
        message: t(locale, "contact.message.whatsapp.management"),
    },
];

const emailContacts = [
    {
        title: t(locale, "contact.email.institutional"),
        subtitle: "Servicios profesionales",
        value: "serviproma2021@gmail.com",
        subject: t(locale, "contact.message.email.subject.general"),
    },
    {
        title: t(locale, "contact.email.technical"),
        subtitle: "Consultas técnicas especializadas",
        value: "Ing_hugo_bh@yahoo.com.mx",
        subject: t(locale, "contact.message.email.subject.technical"),
    },
];
---

<Layout
    title={`${t(locale, "contact.page.title")} | Ing. Civil`}
    description="Canales de contacto profesional para servicios de ingeniería civil, supervisión de obra y gestión de proyectos de infraestructura pesada."
    locale={locale}
>
    <div class="min-h-screen blueprint-grid-bg">
        <!-- Hero Section -->
        <section
            class="bg-white/90 backdrop-blur-sm border-b-2 border-blueprint-blue/20"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
                <div class="dimension-line mb-6"></div>

                <h1
                    class="font-heading text-4xl md:text-5xl font-bold text-blueprint-blue mb-4"
                >
                    {t(locale, "contact.page.title")}
                </h1>

                <p class="text-xl text-gray-600 max-w-2xl">
                    {t(locale, "contact.page.subtitle")}
                </p>

                <div class="dimension-line mt-6"></div>
            </div>
        </section>

        <!-- Contact Channels -->
        <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="grid md:grid-cols-2 gap-12">
                <!-- WhatsApp Section -->
                <div>
                    <div class="flex items-center gap-3 mb-6">
                        <svg
                            class="w-8 h-8 text-green-500"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                            ></path>
                        </svg>
                        <h2
                            class="font-heading text-2xl font-bold text-blueprint-blue"
                        >
                            WhatsApp
                        </h2>
                    </div>

                    <div class="space-y-4">
                        {
                            whatsappContacts.map((contact) => (
                                <ContactCard
                                    type="whatsapp"
                                    title={contact.title}
                                    subtitle={contact.subtitle}
                                    value={contact.value}
                                    href={`https://wa.me/${contact.value.replace(/[^0-9]/g, "")}?text=${encodeURIComponent(contact.message)}`}
                                    ariaLabel={`${contact.title} - ${contact.value}`}
                                />
                            ))
                        }
                    </div>
                </div>

                <!-- Email Section -->
                <div>
                    <div class="flex items-center gap-3 mb-6">
                        <svg
                            class="w-8 h-8 text-blueprint-blue"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <h2
                            class="font-heading text-2xl font-bold text-blueprint-blue"
                        >
                            Correo Electrónico
                        </h2>
                    </div>

                    <div class="space-y-4">
                        {
                            emailContacts.map((contact) => (
                                <ContactCard
                                    type="email"
                                    title={contact.title}
                                    subtitle={contact.subtitle}
                                    value={contact.value}
                                    href={`mailto:${contact.value}?subject=${encodeURIComponent(contact.subject)}&body=${encodeURIComponent(t(locale, "contact.message.email.body"))}`}
                                    ariaLabel={`${contact.title} - ${contact.value}`}
                                />
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- Additional Info -->
            <div
                class="mt-16 bg-white/80 backdrop-blur-sm border-2 border-blueprint-blue/20 rounded-lg p-8"
            >
                <div class="grid md:grid-cols-3 gap-8 text-center">
                    <div>
                        <div
                            class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-blueprint-blue/10"
                        >
                            <svg
                                class="w-8 h-8 text-blueprint-blue"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3
                            class="font-heading text-lg font-bold text-blueprint-blue mb-2"
                        >
                            Horario de Atención
                        </h3>
                        <p class="text-sm text-gray-600 font-mono">
                            Lun - Vie: 8:00 - 18:00<br />
                            Sáb: 9:00 - 14:00
                        </p>
                    </div>

                    <div>
                        <div
                            class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-blueprint-blue/10"
                        >
                            <svg
                                class="w-8 h-8 text-blueprint-blue"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <h3
                            class="font-heading text-lg font-bold text-blueprint-blue mb-2"
                        >
                            Cobertura
                        </h3>
                        <p class="text-sm text-gray-600">
                            Nacional e Internacional
                        </p>
                    </div>

                    <div>
                        <div
                            class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-blueprint-blue/10"
                        >
                            <svg
                                class="w-8 h-8 text-blueprint-blue"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                                ></path>
                            </svg>
                        </div>
                        <h3
                            class="font-heading text-lg font-bold text-blueprint-blue mb-2"
                        >
                            Experiencia
                        </h3>
                        <p class="text-sm text-gray-600 font-mono">40+ años</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>
