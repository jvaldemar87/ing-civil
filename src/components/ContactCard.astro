---
interface Props {
  type: 'whatsapp' | 'email';
  title: string;
  subtitle?: string;
  value: string;
  href: string;
  ariaLabel: string;
}

const { type, title, subtitle, value, href, ariaLabel } = Astro.props;
---

<a
  href={href}
  target={type === 'whatsapp' ? '_blank' : undefined}
  rel={type === 'whatsapp' ? 'noopener noreferrer' : undefined}
  aria-label={ariaLabel}
  class="contact-card group block p-6 bg-white border-2 border-blueprint-blue/20 rounded-md hover:border-safety-orange hover:shadow-blueprint transition-all duration-300"
>
  <!-- Icon Container -->
  <div class="flex items-start gap-4">
    <!-- Icon -->
    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full bg-blueprint-blue/10 group-hover:bg-safety-orange/10 transition-colors">
      {type === 'whatsapp' ? (
        <!-- WhatsApp Icon -->
        <svg class="w-7 h-7 text-blueprint-blue group-hover:text-safety-orange transition-colors" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
      ) : (
        <!-- Email Icon -->
        <svg class="w-6 h-6 text-blueprint-blue group-hover:text-safety-orange transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      )}
    </div>

    <!-- Content -->
    <div class="flex-1 min-w-0">
      <h3 class="font-heading text-lg font-bold text-blueprint-blue mb-1 group-hover:text-safety-orange transition-colors">
        {title}
      </h3>
      {subtitle && (
        <p class="text-sm text-gray-600 mb-2">
          {subtitle}
        </p>
      )}
      <p class="font-mono text-sm text-gray-700 break-all">
        {value}
      </p>
    </div>

    <!-- Arrow Icon -->
    <div class="flex-shrink-0">
      <svg class="w-5 h-5 text-blueprint-blue/50 group-hover:text-safety-orange group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </div>
  </div>

  <!-- Technical Line Detail -->
  <div class="mt-4 pt-4 border-t border-blueprint-blue/10 dimension-line">
    <div class="flex items-center gap-2 text-xs font-mono text-gray-500">
      <div class="w-2 h-2 rounded-full bg-safety-orange/50 group-hover:bg-safety-orange transition-colors"></div>
      <span>
        {type === 'whatsapp' ? 'Respuesta inmediata' : 'Respuesta en 24-48h'}
      </span>
    </div>
  </div>
</a>

<style>
  .contact-card {
    position: relative;
  }
  
  .contact-card::before {
    content: '';
    position: absolute;
    top: -1px;
    left: 10%;
    right: 10%;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent 0%,
      var(--color-blueprint-blue) 10%,
      var(--color-blueprint-blue) 90%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  .contact-card:hover::before {
    opacity: 0.3;
  }
</style>
